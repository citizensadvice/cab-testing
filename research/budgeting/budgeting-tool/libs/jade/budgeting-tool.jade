block script
	script.
		$(document).ready(function() {
			var fieldTitles = [
				"Housing benefit",
				"Child benefit",
				"Disability Living Allowance",
				"Incapacity Benefit",
				"Jobseeker's Allowance",
				"Council Tax Benefit",
				"Statutory Maternity Pay",
				"Carer's Allowance"
			];

			$.each(fieldTitles, function( index, value ) {
				$("#select").append('<option data-id="'+index+'">'+value+'</option>');
			});

			var wrapper = $("#fields-body");
			$("#addField").click(function(e){
				var dataId = $('#fieldOptions').find(':selected').data("id");
				$('#fieldOptions option[data-id="'+dataId+'"]').remove();

				e.preventDefault();
				$(wrapper).append('<fieldset><label for="field'+dataId+'">'+fieldTitles[dataId]+'<a class="remove-field remove u-pull-right" data-id="'+dataId+'">Remove</a></label><div class="field-group field-group--dropdown"><input type="text" id="field'+dataId+'" placeholder="Â£" /><div class="dropdown"><select id="select'+dataId+'"><option>Weekly</option><option>Monthly</option><option>Yearly</option></select></div></div></fieldset>');
			});

			$(wrapper).on("click",".remove-field", function(e){
				var thisId = $(this).data("id");
				e.preventDefault();
				$(this).parent().parent('fieldset').remove();
				$("#select").append('<option data-id="'+thisId+'">'+fieldTitles[thisId]+'</option>');
			})

			var x = 0;
			$(".side-nav-beta.tools").each(function() {
				$("a", this).each(function() {
					if(x>0){
						$(this).prepend( x +'. ');
					}
					x++;
				});
			});
		});

